html
  head
    title Degoke's Chat App
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/public/style.css')
  body
    h1.border.center Chat App
    h2.center#pug-success-message
    | #{title}
    p#pug-variable=message
    
    
    
    if showLogin
      h2.center Login Form
      form(action='/login', method='post').center
        div
          label Username:
          input(type='text', name='username')
        div
          label Password:
          input(type='password', name='password')
        div
          input(type='submit', value='Log In')
          
    if showRegistration
      h2.center Registration Form
      form(action='/register', method='post').center
        div
          label Username:
          input(type='text', name='username')
        div
          label Password:
          input(type='password', name='password')
        div
          input(type='submit', value='Register')

    if showChat
      h2.center#welcome Welcome #{username}!
      .chat.center
        p#num-users
        .chat-box
          ul#messages
          form(action='')
            input#m(autocomplete='off')
            button Send
        a#logout(href='/logout') Logout
      script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
      <script src='/socket.io/socket.io.js'></script>
      script(async, defer, src='/public/client.js')